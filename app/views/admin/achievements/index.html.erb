<% title Achievement.model_name.human.pluralize %>

<div class="admin_functions">
  <%= link_to "New #{ Achievement.model_name.human }", new_admin_achievement_path %>
</div>

<%= render 'admin/shared/search' %>

<%= informant_table @achievements, {
      :headings => [ :name, :summary, :date, :display, '', '', '' ], 
      :body => [ 
        :name, 
        it_shorten(:summary), 
        lambda{|x| l x.date}, 
        it_ajax_toggle(:display), 
        it_edit_images(:image), 
        it_edit, 
        it_destroy 
      ]
    } %>

<%= paginate @achievements %>
