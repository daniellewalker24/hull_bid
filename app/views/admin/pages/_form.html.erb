<%= form_for([:admin, @page]) do |f| %>

  <%= f.error_messages %>
  
  <%= field_set_tag 'Basic' do -%>
    <%= f.hidden_field :layout, :value => 'application' %>
    
    <div class="field">
      <%= f.label :style %><br />
      <%= f.select :style, Page.styles.map{ |x| [t(x), x] } %>
    </div>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :tagline %><br />
      <%= f.text_field :tagline %>
    </div>
  <% end -%>

  <%= field_set_tag 'Content' do -%>
    <div class="field">
      <%= f.label :content, 'Main content' %><br />
      <%= f.text_area :content, :class => "tinymce" %>
    </div>
  <% end %>

  <%= field_set_tag 'Images' do -%>
    <%= f.image_field :image %>
  <% end %>

  <%= field_set_tag 'Associated Team Member' do -%>
    <div class="field">
      <%= f.label :team_member_id %><br />
      <%= f.select :team_member_id, options_for_select(TeamMember.all.map{|x| [x.name, x.id]}, :selected => f.object.team_member_id), :include_blank => "None" %>
    </div>
    
    <div class="field">
      <%= f.label :team_member_heading %><br />
      <%= f.text_field :team_member_heading %>
    </div>

    <div class="field">
      <%= f.label :team_member_introduction %><br />
      <%= f.text_area :team_member_introduction %>
    </div>
  <% end %>
  
  <%= render "admin/shared/seo", :f => f %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
