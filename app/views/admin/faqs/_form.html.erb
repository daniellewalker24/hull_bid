<%= form_for([:admin, @faq]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>
    <div class="field">
      <%= f.label :question %><br />
      <%= f.text_area :question %>
    </div>
    
    <div class="field">
      <%= f.label :answer %><br />
      <%= f.text_area :answer %>
    </div>
  <% end -%>
  
  <%= field_set_tag 'Categories' do -%> 
  	<p class="admin_note">
  		Type a comma seperated list of categories for this news article here.  Press ',' between each entry.
  		Or select from recently used categories below.
  	</p>
    <div class="field">
  	  <%= f.tag_field :tags %>
    </div> 
  <% end %>
  
  <%= field_set_tag 'Settings' do -%>
    <div class="field">
      <%= f.label :display %><br />
      <%= f.check_box :display %>
    </div>    
  <% end -%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>					
