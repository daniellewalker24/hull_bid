<html>
  <%= render 'layouts/head' %>

  <body>
    <%= render 'layouts/header' %>
  
    <div id="content">
      <% unless hide_flash? -%>
        <%- flash.each do |name, msg| -%>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <%- end -%>
      <% end -%>
    
      <%= yield %>
    </div>
    
