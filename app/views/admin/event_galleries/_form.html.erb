<%= form_for([:admin, @event_gallery]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>
    <div class="field">
      <%= f.label :event_id %><br />
      <%= f.select :event_id, options_for_select(Event.order("start_date DESC").map{|x| [x.headline, x.id]}, :selected => f.object.event_id), :include_blank => "None" %>
    </div>
    
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
  <% end -%>

  <%= field_set_tag 'Content' do -%>
    <div class="field">
      <%= f.label :summary, 'Review' %><br />
      <%= f.text_area :summary, :class => "tinymce" %>
    </div>
  <% end -%>
     
  <%= field_set_tag 'Settings' do -%>
    <div class="field">
      <%= f.label :display %><br />
      <%= f.check_box :display %>
    </div>
  <% end -%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>					
