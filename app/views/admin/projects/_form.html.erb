<%= form_for([:admin, @project]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>
    <div class="field">
      <%= f.label :page_id %><br />
      <%= f.select :page_id, Page.order(:title).map{|x| [x.title, x.id]} %>
    </div>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
  <% end -%>

  <%= field_set_tag 'Images' do -%>

    <%= f.image_field :image_1 %>
    
    <div class="field">
      <%= f.label :caption_1 %><br />
      <%= f.text_field :caption_1 %>
    </div>
    
    <%= f.image_field :image_2 %>
    
    <div class="field">
      <%= f.label :caption_2 %><br />
      <%= f.text_field :caption_2 %>
    </div>
    
    <%= f.image_field :image_3 %>
    
    <div class="field">
      <%= f.label :caption_3 %><br />
      <%= f.text_field :caption_3 %>
    </div>
    
    <%= f.image_field :image_4 %>
    
    <div class="field">
      <%= f.label :caption_4 %><br />
      <%= f.text_field :caption_4 %>
    </div>
    
    <%= f.image_field :image_5 %>
    
    <div class="field">
      <%= f.label :caption_5 %><br />
      <%= f.text_field :caption_5 %>
    </div>
  <% end -%>
  
  <%= field_set_tag 'Settings' do -%>
    <div class="field">
      <%= f.label :display %><br />
      <%= f.check_box :display %>
    </div>    
  <% end -%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>					
